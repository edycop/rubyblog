/ Modal
#questionModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "questionModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %h5#questionModalLabel.modal-title New question
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
      = form_for :question, url: '/questions', html: {class: 'form-horizontal'} do
        .modal-body
          .form-group.row
            %label.col-sm-2.col-form-label{:for => "inputEmail"} Email
            .col-sm-10
              %input#inputEmail.form-control{:name => "question[email]", :placeholder => "Email", :required => "", :type => "email", :value => current_user_email}/
          .form-group.row
            %label.col-sm-2.col-form-label{:for => "inputQuestion"} Question
            .col-sm-10
              %textarea#inputQuestion.form-control{:name => "question[body]", :placeholder => "What would you like to ask?", :required => "", :type => "password"}
        .modal-footer
          %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"} Close
          %button.btn.btn-primary{:type => "submit"} Submit
