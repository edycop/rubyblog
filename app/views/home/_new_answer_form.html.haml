/ Modal
#answerModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "answerModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %h5#answerModalLabel.modal-title New answer
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
      = form_for :answer, url: '/answers', html: {class: 'form-horizontal'} do
        %input{:name => "answer[question_id]", :type => "hidden", :value => "#{@question.id}"}/
        .modal-body
          .form-group.row
            %label.col-sm-2.col-form-label{:for => "inputEmail"} Email
            .col-sm-10
              %input#inputEmail.form-control{:name => "answer[email]", :placeholder => "Email", :required => "", :type => "email", :value => current_user_email}/
          .form-group.row
            %label.col-sm-2.col-form-label{:for => "inputanswer"} Answer
            .col-sm-10
              %textarea#inputAnswer.form-control{:name => "answer[body]", :placeholder => "What is your answer?", :required => "", :type => "password"}
        .modal-footer
          %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"} Close
          %button.btn.btn-primary{:type => "submit"} Submit
